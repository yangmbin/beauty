<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee" >
    <RelativeLayout 
        android:id="@+id/register_top_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#9ea7a5"
        android:layout_alignParentTop="true">
        <ImageButton 
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back"
            android:onClick="backBtn"
            android:layout_marginLeft="6dp"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textSize="20sp"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_below="@+id/register_top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText 
            android:id="@+id/register_edittext_top"
            android:layout_alignParentTop="true"
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:background="@drawable/editbox_register"
		    android:hint="请输入帐号"
		    android:textColorHint="#ffffff"
		    android:textColor="#aa000000"
		    android:textSize="16sp"/>
        <EditText 
            android:id="@+id/register_edittext_mid"
            android:layout_below="@+id/register_edittext_top"
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:background="@drawable/editbox_register"
		    android:hint="请输入昵称"
		    android:textColorHint="#ffffff"
		    android:textColor="#aa000000"
		    android:textSize="16sp"/>
        <EditText 
            android:id="@+id/register_edittext_bottom"
            android:layout_below="@+id/register_edittext_mid"
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:background="@drawable/editbox_register"
		    android:hint="请输入密码"
			android:textColorHint="#ffffff"
			android:textColor="#aa000000"
			android:textSize="16sp"
			android:password="true"/>
        <TextView 
            android:id="@+id/register_edittext_extra"
            android:layout_below="@+id/register_edittext_bottom"
		    android:layout_width="match_parent"
		    android:layout_height="12dp"
		    android:background="@drawable/editbox_register"/>
        <Button 
            android:layout_below="@+id/register_edittext_extra"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="注册"
            android:textSize="16sp"
            android:textColor="#aa000000"
            android:background="@drawable/btn_style"
            android:onClick="registerBtn"/>
    </RelativeLayout>
    
    <ProgressBar 
        android:id="@+id/register_progressbar"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_width="45dp"
        android:layout_height="45dp"/>
</RelativeLayout>