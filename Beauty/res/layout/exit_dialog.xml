<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/exit_layout"
        android:layout_width="260dp"
        android:layout_height="120dp"
        android:background="@drawable/exit_dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="5dp"
            android:text="退出BEAUTY"
            android:textColor="#333"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="28dp" >

            <Button
                android:id="@+id/exitBtn0"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_style1"
                android:gravity="center"
                android:onClick="exitbutton_yes"
                android:text="是"
                android:textColor="#aa000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/exitBtn1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_style1"
                android:gravity="center"
                android:onClick="exitbutton_no"
                android:text="否"
                android:textColor="#66000000"
                android:textSize="16sp" />
        </LinearLayout>
</LinearLayout>