<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee" >

    <RelativeLayout 
        android:id="@+id/main_activity_top"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#9ea7a5">
        <ImageButton 
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/mainpage_left"
            android:layout_centerVertical="true"
            android:onClick="mainPageLeftToOpenSlideMenu"/>
        <ImageButton 
            android:id="@+id/main_activity_camera_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/mainpage_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:onClick="getPhoto"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/mainpage_top"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <FrameLayout 
        android:id="@+id/main_activity_framelayout"
        android:layout_below="@+id/main_activity_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
