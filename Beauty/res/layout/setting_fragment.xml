<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee" >
    
    <RelativeLayout 
        android:id="@+id/setting_fragment_set_headimg_layout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@drawable/btn_style2"
        android:clickable="true">
        <TextView 
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="18sp"
            android:textColor="#000000"/>
        <ImageView 
            android:id="@+id/setting_fragment_headimg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="55dp"
            android:layout_height="55dp"/>
    </RelativeLayout>
    <View 
        android:background="#25666666" 
        android:layout_width="fill_parent" 
        android:layout_height="0.100000024dip" />
    <RelativeLayout 
        android:id="@+id/setting_fragment_set_nickname_layout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/btn_style2"
        android:clickable="true">
        <TextView 
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="18sp"
            android:textColor="#000000"/>
        <TextView 
            android:id="@+id/setting_fragment_nickname"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="房价开"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:gravity="right"/>
    </RelativeLayout>
    <View 
        android:background="#25666666" 
        android:layout_width="fill_parent" 
        android:layout_height="0.100000024dip" />
    <RelativeLayout 
        android:id="@+id/setting_fragment_set_signature_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style2"
        android:clickable="true">
        <TextView 
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性签名"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="38dp"/>
        <TextView 
            android:id="@+id/setting_fragment_signature"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="房价开"
            android:layout_centerVertical="true"
            android:maxLines="3"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>
    <View 
        android:background="#25666666" 
        android:layout_width="fill_parent" 
        android:layout_height="0.100000024dip" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="80dp" />
    <View 
        android:background="#25666666" 
        android:layout_width="fill_parent" 
        android:layout_height="0.100000024dip" />
    <RelativeLayout 
        android:id="@+id/setting_fragment_set_published_beauty_layout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/btn_style2"
        android:clickable="true">
        <TextView 
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已发布的BEAUTY"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="38dp"/>
    </RelativeLayout>
    <View 
        android:background="#25666666" 
        android:layout_width="fill_parent" 
        android:layout_height="0.100000024dip" />

</LinearLayout>
